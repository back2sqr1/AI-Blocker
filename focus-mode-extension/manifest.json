{
    "manifest_version": 3,
    "name": "FocusMode",
    "version": "1.0",
    "description": "Block distracting websites to improve focus and productivity",
    "permissions": ["storage", "tabs", "webNavigation"],
    "host_permissions": ["<all_urls>"],
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }