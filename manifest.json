  {
    "name" : "AI Blocker",
    "version" : "1.0.0",
    "manifest_version" : 3,
    "permissions": [
        "declarativeNetRequest",
        "storage", "tabs",
        "webNavigation",
        "webRequest"
    ],
    "content_scripts": [
    {
        "matches": ["<all_urls>"],
        "js": ["content.js"],
        "css": ["content-overlay.css"],
        "run_at": "document_end"
    }
    ],  
    "action": {
      "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "48": "images/icons-48.png"
    },
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    }
}